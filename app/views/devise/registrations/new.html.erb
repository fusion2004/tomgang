<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="two mobile-one columns">
      <%= f.label :name, 'Username', class: 'right inline' %>
    </div>
    <div class="ten mobile-three columns">
      <%= f.text_field :name, autofocus: true, class: 'eight' %>
    </div>
  </div>

  <div class="row">
    <div class="two mobile-one columns">
      <%= f.label :email, class: 'right inline' %>
    </div>
    <div class="ten mobile-three columns">
      <%= f.email_field :email, class: 'eight' %>
    </div>
  </div>

  <div class="row">
    <div class="two mobile-one columns">
      <%= f.label :password, class: 'right inline' %>
    </div>
    <div class="ten mobile-three columns">
      <%= f.password_field :password, class: 'eight' %>
    </div>
  </div>

  <div class="row">
    <div class="two mobile-one columns">
      <%= f.label :password_confirmation, class: 'right inline', style: 'line-height: 1.3em;' %>
    </div>
    <div class="ten mobile-three columns">
      <%= f.password_field :password_confirmation, class: 'eight' %>
    </div>
  </div>

  <div class="row">
    <div class="two mobile-one columns"></div>
    <div class="ten mobile-three columns">
      <%= f.submit "Sign up", class: 'radius button' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
